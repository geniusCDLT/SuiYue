<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/register_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_user_icon"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/register_user" />

            <EditText
                android:id="@+id/register_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:background="#00FFFFFF"
                android:hint="请输入用户名"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_line1_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/register_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="176dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_pass_icon"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                app:srcCompat="@drawable/register_pass" />

            <EditText
                android:id="@+id/register_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:background="#00FFFFFF"
                android:hint="请输入密码"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="206dp"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_line2_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/register_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="226dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_pass_config_icon"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                app:srcCompat="@drawable/register_pass_config" />

            <EditText
                android:id="@+id/register_pass_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:background="#00FFFFFF"
                android:hint="请确认密码"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="257dp"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_line3_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/register_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="277dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_email_icon"
                android:layout_width="34dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                app:srcCompat="@drawable/register_email" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:background="#00FFFFFF"
                android:hint="请输入邮箱"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="307dp"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_line4_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/register_line" />
        </LinearLayout>

    </RelativeLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_button"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:background="@drawable/register_button"
            android:color="@color/black"
            android:text="注  册"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>